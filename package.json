{
  "name": "root",
  "private": true,
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --fix packages/**/*.{js,jsx,ts,tsx}",
    "bootstrap": "lerna bootstrap",
    "test:aptos": "lerna run test --scope=@tickmesh/aptos",
    "test:eth": "lerna run test --scope=@tickmesh/eth",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3",
    "ts-jest": "^29.0.3",
    "typescript": "*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add ."
    ]
  },
  "engines": {
    "npm": "please use yarn",
    "node": "> 16.0.0",
    "yarn": ">= 1.22.10"
  }
}
